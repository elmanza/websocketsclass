
<h2 style="color: red;">Historial</h2>
<% if(personas.length > 0 ) { %> 
<table class="table">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Apellido</th>
        <th scope="col">Edad</th>
      </tr>
    </thead>
    <tbody>
        <% for(let persona of personas) { %> 
          <tr>
            <td><%= persona.nombre  %> </td>
            <td><%= persona.apellido %></td>
            <td><%= persona.edad %></td>
          </tr>
        
        <% } %> 
    </tbody>
  </table>

<% } else { %> 
    <span class="badge bg-danger">No hay personas en el registro</span>
<% } %> 